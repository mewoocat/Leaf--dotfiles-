(defpoll brightness 
  :interval "200ms"
  "light -G"
)


;; System menu

(defwindow system_menu
  :monitor 0
  :windowtype "normal"
  :geometry (geometry :x "1%"
                      :y "1%"
                      :width "14%"
                      :height "20%"
                      :anchor "top right")
  (box
    :class "system-menu-container"
    :orientation "v"
    :spacing 20
    (box 
      :class "system-stats"
      :orientation "h"
      (overlay
        (cpu)
        (circular-progress
          :value 40
          :thickness 6
          ;;:dynamic true
          :value "${EWW_CPU.avg}"
        )
      )
      (overlay
        (memory)
        (circular-progress
          :value 40
          :thickness 6
          ;;:dynamic true
          :value "${memory}"
        )

      )
    )
    (box
      :class "sliders"
      :orientation "v"
      :spacing 20
      (box
        :space-evenly false
        (volume)
        (scale
          :hexpand true
          :class "volume-slider"
          :value "${volume.level}"
          :min 0
          :max 101
          :onchange "pamixer --set-volume {}"
        )
      )
      (box
        :space-evenly false
        (label
          :text ""
          :class "icon"
        )
        (scale
          :hexpand true
          :class "brightness-slider"
          :value "${brightness}"
          :min 0
          :max 101
          :onchange "light -S {}"
        )
      )
    )
    (box
      :orientation "h"
      :spacing 34
      (box
        :space-evenly false
        :spacing 8
        :class "menu-widget "
        (wifi)
        (label
          :text "${wifi.ssid}"
        )
      )
      (box
        :class "bluetooth menu-widget"
        :space-evenly false
        :spacing 8
        (label
          :text ""
        )
      )
    )
    (box
      :space-evenly false
      :class "menu-widget"
      :orientation "h"
      (box
        :class "pfp"
        :width 60
        :height 60
      )
      (label
        :text "${user}" 
      )
    )
  )
)

