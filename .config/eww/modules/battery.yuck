(defpoll battery_status
  :interval "1s"
  "acpi"
)

(defwidget battery_stats []
  (box
    :class "menu-widget"
    :height 116
    :orientation "h"
    (box
      :orientation "v"
      (circular-progress
        :class "circular-progress"
        :thickness 12
        :value "${EWW_BATTERY.BAT0.capacity}"
      )
      (label
        :text "${battery_status}" 
      )
    )
  )
)
