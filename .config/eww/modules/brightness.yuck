(defpoll brightness 
  :interval "200ms"
  "light -G"
)

(defwidget brightness_slider []
  (box
    :space-evenly false
    (label
      :text "î¤ˆ"
      :class "icon brightness-icon"
      :width 20
    )
    (eventbox
      :cursor "pointer"
      :hexpand true
      (scale
        :hexpand true
        :class "brightness-slider"
        :value "${brightness}"
        :min 1
        :max 101
        :onchange "light -S {}"
      )
    )
  )
)
